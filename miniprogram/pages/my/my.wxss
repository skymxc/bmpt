/* miniprogram/pages/my/my.wxss */

.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
background: gainsboro;
position: relative;
}

.container-user{
  width: 100%;
  height: 300rpx;
  background-color: goldenrod;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.container-user-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.image-user{
  width: 100rpx;
  height: 100rpx;
}
.text-user-name{
  color: white;
}

/* 我的便民信息 */
.container-bm{
  margin-top: 10rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  width: 100%;
  color: gray;
  font-size: 30rpx;
}
.container-bmmy{
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid gainsboro;
  display: flex;
  flex-direction: row;
  padding-left: 10rpx;
  align-items: center;
  margin-left: 30rpx;
}

.image-icon-more{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.container-my{
  margin-left: 0rpx;
  color: black;
  font-size: 35rpx;
}

.image-my-icon{
  width: 50rpx;
  height: 50rpx;
}

.container-getuser{
  background-color: #000;
  opacity: 0.5;
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

}
.hide{
  display: none;
}