/* 内容 */

.container-content {
  margin-top: 10px;
  margin-bottom: 10px;
  padding: 5px;
  align-items: center;
  justify-content: center;
  background-color: white;
}

/* 内容-上部-人 */

.container-content-person {
  display: flex;
  flex-direction: row;
  width: 100%;
}

/* 头像 */

.content-person-image {
  width: 40px;
  height: 40px;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  border-radius: 40rpx;
}

/* 用户名 容器*/

.container-profile {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 5px;
  margin-right: 5px;
}

/* 用户名 */

/* 文本溢出显示省略号 （要指定宽度或高度）
  overflow: hidden;
  text-overflow: ellipsis;
white-space: nowrap;
 */

.text-person-name {
  font-size: 18px;
  font-weight: bold;
  color: black;
  width: 60%;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 发布日期 */

.text-time {
  font-size: 12px;
}

/* 联系 按钮 */

.text-person-contact {
  border: 1px red solid;
  border-radius: 2px;
  padding: 3px 10px 3px 10px;
  font-size: 10px;
  display: inline-block;
  margin: 5px;
  height: 80%;
  color: red;
}

/* 文本 */

.container-text {
  margin: 10px;
  color: black;
  width: 100%;
}

/* 类型括号和间隔 */

.text-type-bracket, .text-type-interval {
  color: red;
}

.text-content {
  margin-left: 5px;
  
}

/* 内容图片 */
.container-image{
 
  display: flex;
  flex-direction: row;
  height: 100px;
}
/* 当个图片的 container */
.container-image-single{
  margin: 5px;
  /* background-color: black; */
  flex: 1;
  height: 100%;
}
/* 真实图片 */
.image-content{
  width: 100%;
  height: 100%;
}
/* 第三个图片 more  */
.container-image-more{
  position: relative;
}
/* 更多图片 遮罩层 */
.container-more{
  position: absolute;
  top: 0px;
  background-color: black;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 更多图片的数量 */
.text-image-more-number{
  color: white;
  font-size: 30px;
}

.hide{
  display: none;
}

/* 地址 */
.container-address{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 30px;
  margin: 8px 5px 5px 5px;
}
/* 地址image*/
.image-address{
  width: 20px;
  height: 20px;
  margin-top: 5px;
}
  /* 地址文字 */
.text-address{
  flex: 1;
  height: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: bottom;
  font-size: 15px;
  margin-left: 10px;
}

/* 工具条 */
.container-tool{
  height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.container-tool-single{
  flex: 1;
  height: 100%;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  display: flex;
}
.image-tool{
  height: 20px;
  width: 20px;
}
.text-tool{
  font-size: 15px;
  padding-left: 5px;
}
.button-share{
  background-color: #fff;
}
.button-share::after{
  border: none !important;
}

