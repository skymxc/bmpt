/* miniprogram/pages/editPublish/editPublish.wxss */

/* 容器 */

#container {
  display: flex;
  flex-direction: column;
  background: gainsboro;
  padding: 5rpx;
  width: 100%;
  height: 100%;
  position: relative;
  font-size: 30rpx;
}

/* 发布容器 */

.container-button-publish {
  width: 90%;
  height: 100rpx;
  display: flex;
  margin: 10rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

/* 发布按钮 */

.button-publish {
  background-color: green;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  color: white;
  text-align: center;
}

/* 按钮遮罩层 */
.cover-button {
  width: 100%;
  height: 100%;
  background-color: white;
  border-radius: 10rpx;
  opacity: 0.3;
  position: absolute;
  bottom: 0rpx;
}

/* 免责声明 */

.container-clause{
  width: 90%;
  margin-left: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 25rpx;
  color: gray;
}
.text-clause{
  color: rgb(13, 27, 230);
}

/* 输入框 */
.rich-text-content{
  background-color: white;
  width: 100%;
  padding: 15rpx;
}

/* 图片容器 */
.container-image{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  height: 400rpx;
  background-color: white;
  overflow: hidden;
}

/* 单个图片模块 */
.container-image-single{
  width: 25%;
  height: 45%;
  display: flex;
  flex-direction: column;
  position: relative;
  align-items: center;
  justify-content: center;
}
/* 图片 */
.image-content{
  width: 90%;
  height: 90%;
}

/* 下面的文字 */
.text-image-uploaded{
  background-color: rgba(0, 0, 0, 0.521);
  color: white;
  font-size: 20rpx;
  width: 90%;
  height: 50rpx;
  text-align: center;
  padding-top: 10rpx;
  position: absolute;
  bottom: 5%;
}
/* 图片 ❎ */
.image-reduce{
  position: absolute;
  top: 5%;
  right:5%;
  width: 30rpx;
  height: 30rpx;
  background-color: rgba(0, 0, 0, 0.521);
  padding: 10rpx;
}

/* 添加图片的 */

.container-image-add{
  border: 5rpx dashed gainsboro ;
  border-radius: 10rpx;
  width: 20%;
  height: 40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 10rpx;
}
/* 添加图片*/
.image-add{
  width: 70%;
  height: 70%;
}

.hide{
  display: none;
}

/* 地址 */
.container-address{
  margin-top: 10rpx;
  background-color: white;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 10rpx;
}

.image-address{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.text-address{
  flex: 1;
  font-size: 30rpx;
  overflow: hidden;
}
.image-address-more{
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}