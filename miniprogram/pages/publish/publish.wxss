/* miniprogram/pages/publish/publish.wxss */
#container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  position: relative;
  align-items: center;
}
/* 全部功能 */
#container-fun{
  width: 95%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
/* 单个功能方块 */
.container-fun-single{
  width: 20%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.image-fun{
  height: 80%;
  width: 80%;
  padding: 10%;
  border-radius: 30rpx;

}
.text-fun{
  font-size: 25rpx;

}

/* 频道菜单容器 */
.container-menu{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  display: flex;
  flex-direction: column;
}

/* 频道菜单 */
.container-channels{
  opacity: 0.5;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 5px;
  background-color: white;
  z-index: 99;
}
/* 遮罩层 */
.shade{
  background-color: black;
  opacity: 0.5;
  flex:1;
  width: 100%;
  z-index: 90;
}

.hide{
  display: none;
}
/* 频道 行 */
.container-channel{
  display: flex;
  height: 50px;
  width: 100%;
  border-bottom: greenyellow 2px solid;
  color: black;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
/* 取消 */
.bottom-cancel{
  border:none;
}
