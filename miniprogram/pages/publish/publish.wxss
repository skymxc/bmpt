/* miniprogram/pages/publish/publish.wxss */
#container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  position: relative;
}
/* 全部功能 */
#container-fun{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: green;
  align-items: center;
}

/* 一行功能 */
.container-fun-row{ 
  width: 100%;
  height: 80px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: gainsboro;
  padding: 5px;
}
/* 单个功能方块 */
.container-fun-single{
  padding: 5px;
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.image-fun{
  flex: 1;
  width: 90%;

}
.text-fun{
  font-size: 15px;
}

#container-channels{
  background-color: red;
  opacity: 0.5;
  width: 100%;
  height: 200px;
  
}

.shade{
  background-color: black;
  opacity: 0.5;
  position: absolute;
  top:0px;
  width: 100%;
  height: 100%;

}

.hide{
  display: none;
}
